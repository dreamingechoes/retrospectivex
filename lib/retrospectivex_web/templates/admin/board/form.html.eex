<div class="card">
  <%= form_for @changeset, @action, fn f -> %>
    <div class="card-body">
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
        </div>
      <% end %>

      <div class="form-group">
        <%= label f, :title, class: "control-label" %>
        <%= text_input f, :title, class: "form-control", required: true %>
        <%= error_tag f, :title %>
      </div>

      <div class="form-row mb-2">
        <div class="col">
          <%= label f, :status, class: "control-label" %>
          <%= select f, :status, options_for_status(), class: "form-control", prompt: gettext("Select a status...") %>
          <%= error_tag f, :status %>
        </div>

        <div class="col">
          <%= label f, :moderator, class: "control-label" %>
          <%= text_input f, :moderator, class: "form-control" %>
          <%= error_tag f, :moderator %>
        </div>

        <div class="col">
          <%= label f, :date, class: "control-label" %>
          <%= text_input f, :date, class: "form-control", type: :date %>
          <%= error_tag f, :date %>
        </div>
      </div>

      <div class="form-group">
        <%= label f, :description, class: "control-label" %>
        <%= textarea f, :description, class: "form-control", rows: 10, required: true %>
        <%= error_tag f, :description %>
      </div>
    </div>

    <div class="card-footer">
      <%= submit gettext("Submit"), class: "btn btn-primary" %>
      <%= link gettext("Back"), to: admin_board_path(@conn, :index), class: "btn btn-light" %>
    </div>
  <% end %>
</div>

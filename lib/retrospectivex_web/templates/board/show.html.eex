<h2>Show Board</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @board.title %>
  </li>

  <li>
    <strong>Slug:</strong>
    <%= @board.slug %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @board.description %>
  </li>

  <li>
    <strong>Status:</strong>
    <%= @board.status %>
  </li>

</ul>

<span><%= link "Edit", to: board_path(@conn, :edit, @board) %></span>
<span><%= link "Back", to: board_path(@conn, :index) %></span>
